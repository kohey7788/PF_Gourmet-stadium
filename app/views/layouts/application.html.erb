<!DOCTYPE html>
<html>
  <head>
    <title>GourmetStadium</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <ul class=“navbar-nav”>
          <% if visitor_signed_in? %>
            <li class=“nav-item”>
              <%= link_to "マイページ", visitor_path(current_visitor), class: 'mr-5 nav-link btn btn-outline-secondary' %>
            </li>
            <li class=“nav-item”>
              <%= link_to "新規投稿", new_gourmet_path, class: 'mr-5 nav-link btn btn-outline-secondary' %>
            </li>
            <li class=“nav-item”>
              <%= link_to "グルメ一覧", gourmets_path, class: 'mr-5 nav-link btn btn-outline-secondary' %>
            </li>
            <li class=“nav-item”>
              <%= link_to "ログアウト", destroy_visitor_session_path, method: :delete, class: 'mr-5 nav-link btn btn-outline-secondary' %>
            </li>
          <% else %>
            <li class=“nav-item”>
              <%= link_to "新規登録", new_visitor_registration_path, class: 'mr-5 nav-link btn btn-outline-secondary' %>
            </li>
             <li class=“nav-item”>
              <%= link_to "ログイン", new_visitor_session_path, class: 'mr-5 nav-link btn btn-outline-secondary' %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <!--<div class="d-flex justify-content-around collapse navbar-collapse">-->

    <!--</div>-->
    <%= yield %>
  </body>
</html>
