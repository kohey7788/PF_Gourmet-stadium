<h2 class="page-header text-center pt-5 mb-5 mr-5 pr-5">ログイン</h2>
<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-10 offset-1">
    <table class="table table-borderless">
      <tr>
        <th><%= f.label :"メールアドレス" %></th>
        <td><%= f.text_area :email, autofocus: true, autocomplete: "email", cols:'50',rows: '1' %></td>
      </tr>
      <tr>
        <th> <%= f.label :"パスワード" %></th>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
    </table>
    </div>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field col-10 offset-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions col-10 offset-1">
    <%= f.submit "ログイン", class: "btn btn-success" %>
  </div>
<% end %>
</div>