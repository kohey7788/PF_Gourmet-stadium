<%= form_with model: [ :public, @visitor ], url: visitor_path, local:true do |f| %>
  <div class="field">
    <%= f.label :"名前" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :"性別" %>
    <label><%= f.radio_button :gender, "false" %>男性</label>
    <label><%= f.radio_button :gender, "true" %>女性</label>
  </div>

  <div class="field">
    <%= f.label :"年齢" %>
    <%= f.select :age, [ ["10代",1], ["20代", 2], ["30代", 3 ] ,["40代", 4], ["50代", 5], ["60代以上", 6] ], prompt: "年齢を選択してください" %>
  </div>

  <div class="field">
    <%= f.label :"推し飯" %>
    <%= f.text_field :favorite_food %>
  </div>

  <div class="field">
    <%= f.label :"自己紹介" %>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>